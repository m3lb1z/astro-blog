---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

export interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
const { name, avatar, twitter, linkedIn, github, bio, subtitle } = author.data;
---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
  <Image
    class="w-32 h-32 rounded-full mx-auto"
    src={avatar}
    alt={`Foto de perfil de ${name}`}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
  {subtitle && <p class="text-center text-gray-600 mt-1">{subtitle}</p>}
  <div class="flex justify-center mt-5">
    {
      twitter && (
        <a
          href={`https://twitter.com/${twitter}`}
          class="text-blue-500 hover:text-blue-700 mx-3"
          target="_blank"
          rel="noopener noreferrer"
        >
          Twitter
        </a>
      )
    }
    {
      linkedIn && (
        <a
          href={linkedIn}
          class="text-blue-500 hover:text-blue-700 mx-3"
          target="_blank"
          rel="noopener noreferrer"
        >
          LinkedIn
        </a>
      )
    }
    {
      github && (
        <a
          href={github}
          class="text-blue-500 hover:text-blue-700 mx-3"
          target="_blank"
          rel="noopener noreferrer"
        >
          GitHub
        </a>
      )
    }
  </div>
  {
    bio && (
      <div class="mt-5">
        <h3 class="text-xl font-semibold">Bio</h3>
        <p class="text-gray-600 mt-2">{bio}</p>
        <div class="flex justify-end">
          <a href={`/blog/${author.id}`}>Leer mas</a>
        </div>
      </div>
    )
  }
</div>
