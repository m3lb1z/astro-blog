---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "",
  description = "",
} = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-900">
    <header>
    </header>

    <main class="mb-10 max-w-5xl m-auto px-2 py-2">
      <slot />
    </main>

    <footer>
    </footer>
  </body>
</html>
